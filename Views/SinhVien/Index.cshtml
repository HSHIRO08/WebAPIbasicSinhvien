@model List<Quanlysinhvien.Models.SinhVien>

@{
    ViewBag.Title = "Danh Sách Sinh Viên";
}

<div class="page-header mb-4">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h2 class="mb-0">
                <i class="bi bi-people-fill"></i> Danh Sách Sinh Viên
            </h2>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#modalThemSinhVien">
                <i class="bi bi-plus-circle"></i> Thêm Sinh Viên
            </button>
        </div>
    </div>
</div>

<!-- Thanh tìm kiếm -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <input type="text" class="form-control" id="searchInput" placeholder="Tìm kiếm theo tên hoặc mã sinh viên...">
            </div>
            <div class="col-md-6">
                <input type="text" class="form-control" id="filterClass" placeholder="Lọc theo lớp...">
            </div>
        </div>
    </div>
</div>

<!-- Bảng danh sách sinh viên -->
<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0" id="danhSachSinhVien">
            <thead class="table-dark">
                <tr>
                    <th style="width: 5%">STT</th>
                    <th style="width: 12%">Mã SV</th>
                    <th style="width: 18%">Họ Tên</th>
                    <th style="width: 12%">Ngày Sinh</th>
                    <th style="width: 8%">Giới Tính</th>
                    <th style="width: 10%">Lớp</th>
                    <th style="width: 15%">Email</th>
                    <th style="width: 20%">Hành Động</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                @if (Model != null && Model.Count > 0)
                {
                    int i = 1;
                    foreach (var sv in Model)
                    {
                        <tr data-id="@sv.Id">
                            <td>@i</td>
                            <td>
                                <span class="badge bg-info">@sv.MaSinhVien</span>
                            </td>
                            <td class="fw-500">@sv.HoTen</td>
                            <td>@sv.NgaySinh.ToString("dd/MM/yyyy")</td>
                            <td>@sv.GioiTinh</td>
                            <td>
                                <span class="badge bg-secondary">@sv.Lop</span>
                            </td>
                            <td>@sv.Email</td>
                            <td>
                                <button class="btn btn-sm btn-info" onclick="editSinhVien(@sv.Id)" title="Chỉnh sửa">
                                    <i class="bi bi-pencil-square"></i> Sửa
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="deleteSinhVien(@sv.Id)" title="Xóa">
                                    <i class="bi bi-trash"></i> Xóa
                                </button>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center py-4">
                            <i class="bi bi-inbox"></i> Không có dữ liệu sinh viên
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Thêm/Sửa Sinh Viên -->
<div class="modal fade" id="modalThemSinhVien" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalLabel">Thêm sinh viên mới</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formSinhVien">
                    <input type="hidden" id="sinhVienId" value="0">
                    
                    <div class="mb-3">
                        <label for="maSinhVien" class="form-label">Mã Sinh Viên <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="maSinhVien" required>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="hoTen" class="form-label">Họ Tên <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="hoTen" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="ngaySinh" class="form-label">Ngày Sinh <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="ngaySinh" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="gioiTinh" class="form-label">Giới Tính</label>
                                <select class="form-control" id="gioiTinh">
                                    <option value="">-- Chọn --</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                    <option value="Khác">Khác</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="lop" class="form-label">Lớp</label>
                                <input type="text" class="form-control" id="lop" placeholder="VD: CNTT2020">
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="diaChi" class="form-label">Địa Chỉ</label>
                        <input type="text" class="form-control" id="diaChi" placeholder="Nhập địa chỉ">
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="Nhập email">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="soDienThoai" class="form-label">Số Điện Thoại</label>
                                <input type="text" class="form-control" id="soDienThoai" placeholder="Nhập số điện thoại">
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info" id="infoMessage" style="display:none;"></div>
                    <div class="alert alert-danger" id="errorMessage" style="display:none;"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="saveSinhVien()">Lưu</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Content/sinhvien.js"></script>
}
